@model SalesWebMvc.Models.ViewModels.ProductsFormViewModel

@{
    ViewData["Title"] = "Create";}
<h2>@ViewData["Title"]</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.PriceCost" class="control-label"></label>
                <input asp-for="Product.PriceCost" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.PriceSale" class="control-label"></label>
                <input asp-for="Product.PriceSale" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.DepartmentId" class="control-label"></label>
                <select asp-for="Product.DepartmentId" asp-items="@(new SelectList(Model.Department,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>